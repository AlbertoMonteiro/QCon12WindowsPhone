@model QCon12.Models.Palestra

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Palestra</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Horario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Horario)
            @Html.ValidationMessageFor(model => model.Horario)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descricao, 5, 100, null)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Palestrante)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.PalestranteId, ViewBag.Palestrantes as SelectList)
            @Html.ValidationMessageFor(model => model.Palestrante)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Track)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.TrackId, ViewBag.Tracks as SelectList)
            @Html.ValidationMessageFor(model => model.Track)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
